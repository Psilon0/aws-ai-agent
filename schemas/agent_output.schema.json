{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/agent_output.schema.json",
  "title": "AgentOutput",
  "type": "object",
  "required": ["status", "messages"],
  "properties": {
    "status": {"type": "string", "enum": ["ok", "error", "tool_call"]},
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": {"type": "string", "enum": ["assistant", "tool", "system"]},
          "content": {"type": "string"},
          "format": {"type": "string", "enum": ["text", "markdown", "json"]}
        },
        "additionalProperties": false
      }
    },
    "tool": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "args": {"type": "object", "additionalProperties": true}
      },
      "required": [],
      "additionalProperties": false
    },
    "trace": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "step": {"type": "string"},
          "observation": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
