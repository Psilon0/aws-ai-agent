{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "sim_request.schema.json",
  "type": "object",
  "required": ["risk_profile", "horizon_years"],
  "properties": {
    "risk_profile": {
      "type": "string",
      "enum": ["conservative", "moderate", "aggressive"]
    },
    "horizon_years": { "type": "integer", "minimum": 1, "maximum": 50 },
    "age": { "type": "integer", "minimum": 16, "maximum": 100 },
    "sentiment": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "enum": ["bearish","slightly_bearish","neutral","slightly_bullish","bullish"]
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": false
    },
    "context": {
      "type": "object",
      "properties": { "demo_seed": { "type": ["integer","null"] } },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
