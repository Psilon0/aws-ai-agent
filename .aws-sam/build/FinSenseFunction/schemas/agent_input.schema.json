{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/agent_input.schema.json",
  "title": "AgentInput",
  "type": "object",
  "required": ["session_id", "user", "message"],
  "properties": {
    "session_id": {"type": "string"},
    "user": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {"type": "string"},
        "role": {"type": "string", "enum": ["user", "system", "admin"]},
        "metadata": {"type": "object", "additionalProperties": true}
      }
    },
    "message": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": {"type": "string"},
        "language": {"type": "string"},
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "uri"],
            "properties": {
              "type": {"type": "string", "enum": ["file", "image", "url"]},
              "uri": {"type": "string"},
              "mime": {"type": "string"}
            }
          }
        }
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "time_iso": {"type": "string"},
        "locale": {"type": "string"},
        "memory_keys": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
